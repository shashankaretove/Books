


<h1>Home page</h1><br>



<div class="link_to">

<%= link_to 'New Book', new_user_book_path%>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
<%= link_to 'Back', users_path%>


<div class="content">
</div>

<% if flash[:notice] %>
    <div class="notice" style="text-shadow: 0.07em 0.3em 0.9em #333; text-align:center;color: green; padding:5px; margin-bottom:12px;">
      <%= flash[:notice] %>
    </div>
  <% end %>

<hr>
<div class="col">
<table>
  <tr> 
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Image</th>
  </tr>
  
<% @books.each do |book| %>
   <tr>
    <td><%= book.id %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.summary %></td>
    <td><div id="bg_img"><%= image_tag book.picture %></div></td>
    
   
     <td>
 <div class="link_to">
    <%= link_to 'Show', user_book_path(@user, book) %>&nbsp&nbsp&nbsp
    <%= link_to 'Edit', edit_user_book_path(@user, book) %>&nbsp&nbsp&nbsp
    <%= link_to 'Remove', user_book_path(@user,book), method: :delete, data: { confirm: "Are you sure?" } %>
  
  </td>
</div>

 </tr>

<% end %>
</table>
</div>
</div>