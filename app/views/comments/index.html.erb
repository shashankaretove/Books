
<style>
h1 {
  background: #eee;
  text-align : center;
  border-radius: 1px;
  
  }
#n_user{text-align: center;}
  table {text-align: center;
    width: 100%;
    background: #eee;
    -webkit-column-count:5;
    border: 1px solid #eee;
    -column-gap: 40px;
    }

#links{text-align:center;}

</style>

<h1>Comments on <%= @book.title %></h1><br>
<div id="links">

<%= link_to 'New Book', new_user_book_path%>

</div>

<hr>

<table>
<% @books.each do |book| %>
 <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Image url</th>
  </tr>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.summary %></td>
    <td><%= book.picture %></td>
    
     <td>
 
    <%= link_to 'Show', user_book_path(@user, book) %>&nbsp&nbsp&nbsp
    <%= link_to 'Edit', edit_user_book_path(@user, book) %>&nbsp&nbsp&nbsp
    <%= link_to 'Remove', user_book_path(@user,book), method: :delete, data: { confirm: "Are you sure?" } %></td>
 </tr>
<% end %>
</table><br>
